<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <!-- untuk memuat css bootstrap-->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous">
    <link 
        rel="stylesheet" 
        href="/public/style.css">
</head>
<body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand me-2" href="#">
              <img src="/public/asset/logo.png"></a>
          <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 ms-1 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active ms-3" 
                    aria-current="page" 
                    href="/">Home</a>
              </li>
              {{#if this.isLogin}}
              <li class="nav-item">
                <a class="nav-link active text-black ms-3" 
                    aria-current="page" 
                    href="/addProject">Add Project</a>
              </li>
              {{/if}}
            </ul>
            <div class="d-flex">
                {{#if this.isLogin}}
                <span>{{user.name}}</span>
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/logout">logout</a>
                {{else}}
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/register">Register</a>
                <a class="nav-link active text-black me-auto" 
                    aria-current="page" 
                    href="/login">Login</a>
                {{/if}}  
              <a class="btn btn-dark" id="btncontact" href="/contact">Contact me</a>
            </div>
          </div>
        </div>
      </nav>
    <!-- Navbar akhir -->
    <!--Login-->
        <div class="container-form-blog d-flex justify-content-center mt-5">
            <form action="login" method="POST">
                <div class="h6 text-center mb-4 mt-5 text-black">LOGIN TO YOUR ACCOUNT</div>
                        {{#if messages.success}}
                          <div class='alert alert-success' role='alert'>
                            {{messages.success}}
                          </div>
                        {{/if}}

                        {{#if messages.error}}
                          <div class='alert alert-danger' role='alert'>
                            {{messages.error}}
                          </div>
                        {{/if}}
                <div class="mb-2 mt-3">
                    <label for="input-title" class="form-label text-black">Email</label>
                    <input
                        type="text"
                        class="form-control"
                        id="login-email"
                        name="email"
                    />
                </div>
                <div class="mb-2 mt-3">
                    <label for="input-title" class="form-label text-black">Password</label>
                    <input
                        type="password"
                        class="form-control"
                        id="login-password"
                        name="password"
                    />
                </div>
                <div class="col-md-12 mt-5">
                    <div class="btn-post" type="button" onclick="">
                        <button id="btnsubmit">Submit</button>
                    </div>
                </div>    
            </form>    
        </div>    
    <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
    crossorigin="anonymous">
    </script>
</body>
</html>