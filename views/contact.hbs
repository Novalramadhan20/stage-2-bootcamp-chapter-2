<!DOCTYPE html>
<html>
<head>
    <title>Contact Me</title>
    <!-- untuk memuat css bootstrap-->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous">
    <link 
        rel="stylesheet" 
        href="/public/style.css">
    <script src="contact.js"></script>
</head>
<body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand me-2" href="#">
              <img src="/public/asset/logo.png"></a>
          <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 ms-1 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active ms-3" 
                    aria-current="page" 
                    href="/">Home</a>
              </li>
              <li class="nav-item">
                {{#if this.isLogin}}
                <a class="nav-link active ms-3" 
                    aria-current="page" 
                    href="/addProject">Add Project
                </a>
                {{/if}}
              </li>
            </ul>
            <div class="d-flex"> 
                {{#if this.isLogin}}
                <a class="nav-link active me-auto text-black" 
                    aria-current="page" 
                    href="/">{{user.name}}</a>
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/logout">logout</a>
                {{else}}
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/register">Register</a>
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/login">Login</a>
                {{/if}}
                <a class="btn btn-dark" id="btncontact" href="/contact">Contact me</a>
            </div>
          </div>
        </div>
      </nav>
    <!-- Navbar akhir -->
    <!--Contact-->
        <div class="container-form-blog d-flex justify-content-center">
            <form>
                <div class="h3 text-center mb-4 mt-5 text-black">GET IN TOUCH
                </div>
                <div class="mb-3">
                    <label for="input-name" class="form-label text-black">Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="input-name"
                    />
                </div>
                <div class="mb-3">
                    <label for="input-email" class="form-label text-black">Email</label>
                    <input
                        type="text"
                        class="form-control"
                        id="input-email"
                    />
                </div>
                <div class="mb-3">
                    <label for="input-phone" class="form-label text-black">Phone Number</label>
                    <input
                        type="number"
                        class="form-control"
                        id="input-phone"
                    />
                </div>
                <div class="mb-3">
                    <label for="input-checkbox" class="form-label text-black">Subject</label>
                    <select class="form-select" id="select-subject" aria-label="Default select example">
                        <option selected></option>
                        <option value="I'm Hiring">I'm Hiring</option>
                        <option value="Let's Collaboration">Let's Collaboration</option>
                        <option value="Let's Talk">Let's Talk</option>
                        </select>
                </div>
                <div class="mb-3">
                    <label for="input-message" class="form-label text-black">Description</label>
                    <textarea class="form-control" id="input-message" rows="5"></textarea>
                </div>
                <div class="col-md-12 mt-5">
                    <button 
                        type="button" 
                        id="btnsubmit" 
                        class="btn btn-dark"
                        onclick="submitForm()"
                        >Submit
                    </button>
                </div>
            </form>
                </div>
        </div>
    <script src="/public/contact.js">
    </script>    
    <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
    crossorigin="anonymous">
    </script>  
</body>

</html>