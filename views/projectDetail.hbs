<!DOCTYPE html>
<html>
<head>
    <title>My profile</title>
    <!-- untuk memuat css bootstrap-->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous">
    <link 
        rel="stylesheet" 
        href="/public/style.css">    
</head>
<body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand me-2" href="#">
              <img src="/public/asset/logo.png"></a>
          <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 ms-1 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active text-black ms-3" 
                        aria-current="page" 
                        href="/">Home</a>
                </li>
                <li class="nav-item">
                    {{#if this.isLogin}}    
                    <a class="nav-link active ms-3" 
                        aria-current="page" 
                        href="/addProject">Add Project
                    </a>
                    {{/if}}
                </li>      
            </ul>
            <div class="d-flex">
                {{#if this.isLogin}}
                <a class="nav-link active me-auto text-black" 
                    aria-current="page" 
                    href="">{{user.name}}</a>
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/logout">logout</a>
                {{else}}
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/register">Register</a>
                <a class="nav-link active me-auto" 
                    aria-current="page" 
                    href="/login">Login</a>
                {{/if}}    
              <a class="btn btn-dark" id="btncontact" href="/contact">Contact me</a>
            </div>
          </div>
        </div>
      </nav>
    <!-- Navbar akhir -->    
    <!-- Project detail-->
        <div class="main-project-container">
            <h1>{{projects.project_name}}</h1>
            <div class="project-header-container content">
                <div class="header-leftside">
                    <img src="http://localhost:5008/uploads/{{projects.image}}"alt="">
                </div>
                <div class="header-rightside">
                    <h3>Duration</h3>
                    <div class="header-duration">
    
                        <div class="header-duration-tanggal">
                            <img src="/public/asset/calendar.png" />
                            <span>{{projects.startdate}} - {{projects.enddate}}</span>
                        </div>
                        <div class="header-duration-waktu">
                            <img src="/public/asset/clock.png">
                            <span>{{projects.duration}}</span>
                        </div>
                    </div>
                    <h3>Technologies</h3>
                    <div class="header-tech">
    
                        <div class="header-tech-leftside">
                            <div>
                                {{#if projects.reactjs}}
                                <img src="/public/asset/reactjs.png" />
                                <span>React Js</span>
                                {{/if}}
                            </div>
                            <div>
                                {{#if projects.nodejs}}
                                <img src="/public/asset/nodejs.png" />
                                <span>Node Js</span>
                                {{/if}}
                            </div>
                        </div>
                        <div class="header-tech-rightside">
                            <div>
                                {{#if projects.nextjs}}
                                <img src="/public/asset/javascript.png" />
                                <span>JavaScript</span>
                                {{/if}}
                            </div>
                            <div>
                                {{#if projects.typescript}}
                                <img src="/public/asset/socketio.png"
                                    alt="">
                                <span>Socket IO</span>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>   
            </div>
            <div class="content">
                <p>{{projects.description}}
                </p>
            </div>
    
        </div> 
</body>
</html>       